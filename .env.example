# RAPTOR RAG LangChain - Environment Variables
# Copy this file to .env and fill in the values

# ===========================================
# LLM API Keys
# ===========================================

# OpenAI API Key (Required for OpenAI models)
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Base URL (Optional - for custom providers)
OPENAI_BASE_URL=https://openrouter.ai/api/v1

# Google AI API Key (Required for Gemini models)
GOOGLE_API_KEY=your_google_api_key_here


# ===========================================
# Model Configuration
# ===========================================

# Embedding Model (default: text-embedding-3-small)
EMBEDDING_MODEL=text-embedding-3-small

# Summarization Model (default: gpt-5-mini)
SUMMARIZATION_MODEL=google/gemini-2.5-flash-lite-preview-09-2025

# QA Model (default: gpt-5-mini)
QA_MODEL=google/gemini-2.5-flash-lite-preview-09-2025

# ===========================================
# RAPTOR Hyperparameters
# ===========================================

# Maximum tokens per chunk
MAX_TOKENS=1000

# Number of tree layers (default: 5)
NUM_LAYERS=2

# Top-k for retrieval (default: 10)
TOP_K=10

# Similarity threshold (default: 0.5)
THRESHOLD=0.5

# Selection mode: "top_k" or "threshold"
SELECTION_MODE=top_k

# Summarization length (max tokens for summary)
SUMMARIZATION_LENGTH=200

# ===========================================
# Clustering Configuration
# ===========================================

# UMAP reduction dimension (default: 10)
REDUCTION_DIMENSION=20

# GMM threshold for soft clustering
CLUSTERING_THRESHOLD=0.1

# ===========================================
# Vector Store Configuration
# ===========================================

# Vector store type: "faiss" or "chroma"
VECTOR_STORE_TYPE=faiss

# Path to store processed indices
VECTOR_STORE_PATH=./data/processed

# ===========================================
# Data Paths
# ===========================================

# Raw data directory (PDFs)
RAW_DATA_PATH=./data/raw

# Processed data directory
PROCESSED_DATA_PATH=./data/processed

# ===========================================
# Logging & Debug
# ===========================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable verbose output
VERBOSE=false

# ===========================================
# LangSmith (Optional - for evaluation)
# ===========================================

# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_API_KEY=your_langsmith_api_key
# LANGCHAIN_PROJECT=raptor-rag-langchain
